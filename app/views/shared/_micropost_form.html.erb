<%= form_for @micropost do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		Title:<br/>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		Content:<br/>
		<%= f.text_area :content, :rows => 10, :cols => 80 %>
	</div>
	<div class="actions">
		<%= f.submit "Submit" %>
	</div>
<% end %>