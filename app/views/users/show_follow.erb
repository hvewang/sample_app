<table class="profile" summary="Profile information">
	<tr>
		<td class="sidebar round">
			<%= link_to "Profile", edit_user_path(current_user) %><br />
			<%= link_to "All users", users_path %><br />
			<%= link_to "My posts", mypost_path %>
		</td>
		
		<td class="main">
			<table summary="Information about following/followers">
				<tr>
					<td class="main">
						<strong>Name</strong> <%= @user.name %><br />
						<strong>URL</strong> <%= link_to user_path(@user), @user %><br />
						
						<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
			
						<strong>Microposts</strong> <%= @user.microposts.count %>
						<%= render 'shared/stats' %>
						
						<h1><%= @title %></h1>
						<% unless @users.empty? %>
						<ul class="users">
						<%= render @users %>
						</ul>
						<%= will_paginate @users %>
						<% end %>
					</td>
				</tr>
			</table>

		</td>
	</tr>
</table>