<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
	<%= render 'fields', :f => f %>
	
	<div class="actions">
		<!--
		<%= submit_or_cancel(f) %><br />
		-->
		<%= f.submit %> or <%= link_to "Cancel", @user %>
	</div>
<% end %>

<div>
	<%= gravatar_for @user %>
	<a href="http://gravatar.com/emails">change</a>
</div>
