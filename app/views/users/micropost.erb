<table class="profile" summary="Profile information">
	<tr>
		<td class="sidebar round">
			<%= link_to "My account", @user %><br />
			<%= link_to "Profile", edit_user_path(current_user) %><br />
			<%= link_to "All users", users_path %> <br />
			<%= link_to "My posts", mypost_path %>
		</td>
		
		<td class="main">			
			<h1>
				<%= gravatar_for current_user %>
				<%= current_user.name %>
			</h1>
			<strong>Microposts</strong> <%= current_user.microposts.count %>
			<br />
			<%= render 'shared/stats' %>
			<%= render 'shared/micropost_form' %>
			
			<% unless @microposts.empty? %>
				<table class="microposts" summary="User microposts">
					<%= render @microposts %>
				</table>
				<%= will_paginate @microposts %>
			<% end %>
		</td>
	</tr>
</table>