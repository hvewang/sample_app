<h1>
	<%= gravatar_for current_user %>
	<%= current_user.name %>'s post
</h1>
<strong>Total Microposts</strong> <%= current_user.microposts.count %>
<br /><br />

<% if admin_user? %>
	<%= render 'shared/stats' %>
<% end %>

<%= render 'shared/micropost_form' %>

<% unless @microposts.empty? %>
	<table class="microposts" summary="User microposts">
		<%= render @microposts %>
	</table>
	<%= will_paginate @microposts %>
<% end %>
